{
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": 0,
        "no-unused-vars": 1,
        "no-extra-semi": 1,
        "comma-dangle": 0,
        "quotes": 0,
        "camelcase": 0,
        "no-use-before-define": 0,
        "no-underscore-dangle": 0,
	"callback-return": 2,
	"no-sync": 2,
	"handle-callback-err": 2,
	"no-redeclare": 2
    }
}
