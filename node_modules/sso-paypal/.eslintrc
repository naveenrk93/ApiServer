{
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "browser": false,
        "es6": true,
        "mocha": true,
        "node": true
    },
    "rules": {
        "no-var": ["error"],
        "no-console": ["error", { allow: ["error"] }],
        "space-before-function-paren": ["error", { "anonymous": "always", "named": "never" }]
    }
}
